<?xml version="1.0" encoding="utf-8"?>
<MixxxControllerPreset mixxxVersion="2.3" schemaVersion="1">
  <info>
    <name>Reloop Mixon 4 â€” Core Mapping</name>
    <author>ChatGPT + you</author>
    <description>
      Jog wheels, Hi-Res pitch, Loop encoder + toggle, Loop LEDs handled in script.
    </description>
  </info>

  <controller id="Reloop Mixon 4">
    <scriptfiles>
      <file filename="Reloop-Mixon4.scripts.js" functionprefix="Mixon4"/>
    </scriptfiles>

    <controls>

      <!-- ========== DECK A (Channel1 / MIDI Ch 4) ========== -->
      <!-- Jog -->
      <control>
        <group>[Channel1]</group>
        <key>Mixon4.wheelTouch</key>
        <status>0x94</status><midino>0x07</midino>
        <options><Script-Binding/></options>
      </control>
      <control>
        <group>[Channel1]</group>
        <key>Mixon4.wheelTurn</key>
        <status>0xB4</status><midino>0x06</midino>
        <options><Script-Binding/></options>
      </control>

      <!-- Pitch fader -->
      <control>
        <group>[Channel1]</group>
        <key>Mixon4.pitchBend14</key>
        <status>0xE4</status><midino>0x00</midino>
        <options><Script-Binding/></options>
      </control>

      <!-- Loop encoder + button -->
      <control>
        <group>[Channel1]</group>
        <key>Mixon4.loopSizeEncoder</key>
        <status>0xB4</status><midino>0x08</midino>
        <options><Script-Binding/></options>
      </control>
      <control>
        <group>[Channel1]</group>
        <key>Mixon4.loopToggle</key>
        <status>0x94</status><midino>0x08</midino>
        <options><Script-Binding/></options>
      </control>

      <!-- ========== DECK B (Channel2 / MIDI Ch 5) ========== -->
      <control>
        <group>[Channel2]</group>
        <key>Mixon4.wheelTouch</key>
        <status>0x95</status><midino>0x07</midino>
        <options><Script-Binding/></options>
      </control>
      <control>
        <group>[Channel2]</group>
        <key>Mixon4.wheelTurn</key>
        <status>0xB5</status><midino>0x06</midino>
        <options><Script-Binding/></options>
      </control>
      <control>
        <group>[Channel2]</group>
        <key>Mixon4.pitchBend14</key>
        <status>0xE5</status><midino>0x00</midino>
        <options><Script-Binding/></options>
      </control>

      <control>
        <group>[Channel2]</group>
        <key>Mixon4.loopSizeEncoder</key>
        <status>0xB5</status><midino>0x08</midino>
        <options><Script-Binding/></options>
      </control>
      <control>
        <group>[Channel2]</group>
        <key>Mixon4.loopToggle</key>
        <status>0x95</status><midino>0x08</midino>
        <options><Script-Binding/></options>
      </control>

      <!-- ========== DECK C (Channel3 / MIDI Ch 6) ========== -->
      <control>
        <group>[Channel3]</group>
        <key>Mixon4.wheelTouch</key>
        <status>0x96</status><midino>0x07</midino>
        <options><Script-Binding/></options>
      </control>
      <control>
        <group>[Channel3]</group>
        <key>Mixon4.wheelTurn</key>
        <status>0xB6</status><midino>0x06</midino>
        <options><Script-Binding/></options>
      </control>
      <control>
        <group>[Channel3]</group>
        <key>Mixon4.pitchBend14</key>
        <status>0xE6</status><midino>0x00</midino>
        <options><Script-Binding/></options>
      </control>

      <control>
        <group>[Channel3]</group>
        <key>Mixon4.loopSizeEncoder</key>
        <status>0xB6</status><midino>0x08</midino>
        <options><Script-Binding/></options>
      </control>
      <control>
        <group>[Channel3]</group>
        <key>Mixon4.loopToggle</key>
        <status>0x96</status><midino>0x08</midino>
        <options><Script-Binding/></options>
      </control>

      <!-- ========== DECK D (Channel4 / MIDI Ch 7) ========== -->
      <control>
        <group>[Channel4]</group>
        <key>Mixon4.wheelTouch</key>
        <status>0x97</status><midino>0x07</midino>
        <options><Script-Binding/></options>
      </control>
      <control>
        <group>[Channel4]</group>
        <key>Mixon4.wheelTurn</key>
        <status>0xB7</status><midino>0x06</midino>
        <options><Script-Binding/></options>
      </control>
      <control>
        <group>[Channel4]</group>
        <key>Mixon4.pitchBend14</key>
        <status>0xE7</status><midino>0x00</midino>
        <options><Script-Binding/></options>
      </control>

      <control>
        <group>[Channel4]</group>
        <key>Mixon4.loopSizeEncoder</key>
        <status>0xB7</status><midino>0x08</midino>
        <options><Script-Binding/></options>
      </control>
      <control>
        <group>[Channel4]</group>
        <key>Mixon4.loopToggle</key>
        <status>0x97</status><midino>0x08</midino>
        <options><Script-Binding/></options>
      </control>

    </controls>

    <!-- Simple example outputs: tempo LED; loop LEDs are handled via JS -->
    <outputs>
      <output>
        <group>[Channel1]</group><key>play_indicator</key>
        <status>0x94</status><midino>0x0C</midino>
        <on>0x7F</on><off>0x00</off>
      </output>
      <output>
        <group>[Channel2]</group><key>play_indicator</key>
        <status>0x95</status><midino>0x4C</midino>
        <on>0x7F</on><off>0x00</off>
      </output>
      <output>
        <group>[Channel3]</group><key>play_indicator</key>
        <status>0x96</status><midino>0x0C</midino>
        <on>0x7F</on><off>0x00</off>
      </output>
      <output>
        <group>[Channel4]</group><key>play_indicator</key>
        <status>0x97</status><midino>0x4C</midino>
        <on>0x7F</on><off>0x00</off>
      </output>
    </outputs>

  </controller>
</MixxxControllerPreset>
